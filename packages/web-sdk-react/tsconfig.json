{
  "compilerOptions": {
    /* Language & environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* React */
    "jsx": "react-jsx",

    /* Types */
    "strict": true,
    "skipLibCheck": true,

    /* Declarations */
    "declaration": true,
    "declarationMap": true,

    /* Build behavior */
    "noEmit": true
  },
  "include": ["src"]
}